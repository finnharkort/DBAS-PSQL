WITH RECURSIVE two_way_border AS (
    SELECT 
        Country1,
        Country2
    FROM borders
    UNION ALL
    SELECT 
        Country2 AS Country1, 
        Country1 AS Country2
    FROM borders
),
steps_from_sweden AS (
    SELECT 
        Country2 AS Second,
        1 AS count
    FROM two_way_border
    WHERE Country1 = 'S'
    UNION ALL
    SELECT 
        twb.Country2 AS Second,
        count + 1 AS Count
    FROM two_way_border twb
    JOIN steps_from_sweden sfs ON twb.Country1 = sfs.Second
    WHERE Country2 != 'S' AND count < 5
)
SELECT
    Second AS code,
    Name,
    MIN(count) AS min 
FROM steps_from_sweden
JOIN Country ON Second = Code
GROUP BY Name, Second
ORDER BY min ASC;